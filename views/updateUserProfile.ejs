<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Update User Profile</title>
		<link rel="stylesheet" href="./stylesheets/post.css" />
	</head>
	<body>
		<div id="app">
			<h1 id="app-heading">Update User Profile</h1>
			<div id="app-content">
				<div class="container">
					<form id="task-form" method="post" action="/updateUserProfile">
						<div class="form-group">
							<% if (typeof errorMessage !== 'undefined') { %>
							<p
								style="
									font-size: 18px;
									text-align: center;
									color: rgb(236, 187, 114);
								"
							>
								<%= errorMessage %>
							</p>
							<% } %>
							<label for="task-title">User ID:</label>
							<input type="text" id="task-title" name="id" required />
						</div>
						<div class="form-group">
							<label for="task-title">First Name:</label>
							<input type="text" id="task-title" name="fName" required />
						</div>
						<div class="form-group">
							<label for="task-description">Last Name:</label>
							<input type="text" id="task-title" name="lName" required />
						</div>
						<div class="form-group">
							<label for="task-date">Email:</label>
							<input type="email" id="task-date" name="email" required />
						</div>
						<div class="form-group">
							<label for="task-title">Password:</label>
							<input type="password" id="task-title" name="password" required />
						</div>
						<button type="submit" class="submit-button">Submit</button>
					</form>
					<div id="confirmation-message" class="hidden">
						<span class="checkmark">&#10003;</span>
						<p style="color: #333">Your profile has been updated!</p>
					</div>
				</div>
			</div>
		</div>
		<script src="./javascripts/updateUserProfile.js"></script>
	</body>
</html>
